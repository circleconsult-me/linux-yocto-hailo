/dts-v1/;

#include "hailo15-ginger-imaging.dtsi"

&sdio1 {
    status = "okay";
    8-bit-mux-mode;
};

&eth {
    status = "okay";
};

&csi2rx0 {
    status = "okay";
};

&i2c_0 {
    status = "okay";
    ov2775: camera-sensor@6c {
        status = "okay";
        compatible = "ovti,ov2775";
        reg = <0x6c>;
        clocks = <&sensor_clk>;
        clock-names = "xvclk"; 
        clock-frequency = <24000000>;
        csi-id = <0>;

        port {
            sensor_out_csi2rx: endpoint {
                data-lanes = <1 2 3 4>;
                remote-endpoint = <&csi2rx_in_sensor>;
            };
        };
    };
};

&i2c_1 {
    status = "okay";
};

&i2c_2 {
    status = "okay";
};

&i2c_3 {
    status = "okay";
};

&hailo_isp {
    status = "okay";
};

&hailo_pixel_mux {
    status = "okay";
};

&rxwrapper0 {
    status = "okay";
};
